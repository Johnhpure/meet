generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Registration {
  id                Int      @id @default(autoincrement())
  name              String   @db.VarChar(50)
  idCard            String   @unique @db.VarChar(18)
  gender            String   @db.VarChar(10)
  hasPlusOnes       Boolean  @default(false)
  plusOnesCount     Int      @default(0)
  attendanceType    String   @db.VarChar(20)
  companions        String?  @db.Text // JSON格式存储携带人员信息
  phone             String   @db.VarChar(11)
  email             String   @db.VarChar(100)
  wechat            String?  @db.VarChar(50)
  city              String   @db.VarChar(50)
  position          String   @db.VarChar(50)
  permitImageUrl    String   @db.VarChar(255)
  paymentImageUrl   String   @db.VarChar(255)
  totalFee          Int      @default(0)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  @@index([phone])
  @@index([createdAt])
  @@map("registrations")
}
